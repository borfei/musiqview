<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="32dp"
    android:paddingEnd="64dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcome_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_header"
        android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/welcome_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_permission"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/welcome_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_instruction"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/welcome_configuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_configuration"
        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_tip"
        android:textAppearance="@style/TextAppearance.Material3.LabelSmall" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/welcome_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_continue" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonStyle"
            android:id="@+id/welcome_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_customize" />
    </LinearLayout>
</LinearLayout>